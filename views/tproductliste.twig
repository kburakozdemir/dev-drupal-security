{% extends "layout.twig" %}

{% block content %}
	<header>
		<h1>{{ title }}</h1>
	</header>

	<div class="row">
		<div class="col-sm-12">
			<div class="alert alert-info" role="alert">
				{% for resultCift in resultsCift %}
					<p style="margin: 0px;">{{ resultCift }}</p>
				{% endfor %}
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12">
			<div class="table-responsive">
				<table id="dataListTable" class="table table-striped table-hover table-bordered table-sm caption-top">
					<thead>
						<tr>
							<th>URUNADI</th>
							<th>Status</th>
							<th>URUNKARTIID</th>
							<th>URUNID</th>
							<th>STOKKODU</th>
							<th>StokAdedi</th>
							<th>Link</th>
							<th>Bare URL</th>
						</tr>
					</thead>
					<tbody>

						{% for result in resultListe %}
							<tr>
								<td>{{ result.URUNADI }}</td>
								<td>{{ result.Aktif }}</td>
								<td>{{ result.URUNKARTIID }}</td>
								<td>{{ result.URUNID }}</td>
								<td class="stokkodu">{{ result.STOKKODU }}</td>
								<td>{{ result.StokAdedi }}</td>
								<td>
									<a href="https://bikalite.com{{result.UrunSayfaAdresi}}" target="_blank">Link</a>
								</td>
								<td>{{result.UrunSayfaAdresi}}</td>
							</tr>
						{% endfor %}

					</tbody>
					<tfoot>
						<tr>
							<th>URUNADI</th>
							<th>Status</th>
							<th>URUNKARTIID</th>
							<th>URUNID</th>
							<th>STOKKODU</th>
							<th>StokAdedi</th>
							<th>Link</th>
							<th>Bare URL</th>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

{% block page_based_script %}
	{% include 'liste.twig' %}
{% endblock %}
