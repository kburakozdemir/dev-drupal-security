{% set buttonMarkUp = '<p><button id="collapse_all">Collapse all</button></p>' %}

{% extends "layout.twig" %}

{% block content %}

  {% if resultSingle %}
		<h1>{{ resultSingle.Tanim }}</h1>
    {{ buttonMarkUp | raw }}
		<p>
			<em>
				<a href="/bikalite/tcategory.php">Kategorilere d√∂n</a>
			</em>
		</p>
		{% for key,value in resultSingle %}
			<details>
				<summary>{{ key }}</summary>
				<div>{{ value | raw }}</div>
			</details>
		{% endfor %}
	{% endif %}

	{% if resultMultiple %}
		<h1>{{ title }}</h1>
    {{ buttonMarkUp | raw }}
		{% for result in resultMultiple %}
			<details>
				<summary>
					<h2>{{ result.Tanim }}
						(Aktif:
						{%if result.Aktif %}
							Aktif
						{% else %}
							Pasif
						{% endif %}) -
						<a href="/bikalite/tcategory.php?catid={{ result.ID }}">{{ result.ID }}</a>
					</h2>
				</summary>
				<div>
					{{ result.Icerik | raw }}
				</div>
			</details>
		{% endfor %}
	{% endif %}

{% endblock %}

{% block page_based_script %}
	<script src="/js/app-tcategory.js"></script>
{% endblock %}
